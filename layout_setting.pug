doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        title BITRADEX
        link(rel="stylesheet" href="../css/fontawesome-all.min.css")
        link(rel="stylesheet" href="../css/bootstrap.css")
        link(rel="stylesheet" href="../css/style.css")
    body
        .controls 
            .control-toggle
                i.fas.fa-cog.fa-1x
            .control-button-group
                button.btn-theme(data-theme="light")
                button.btn-theme(data-theme="dark")
        .wrapper.dark
            .layout
                //- navigation bar
                nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.scrolling-navbar.fixed-top
                    a.navbar-brand(href="./index.html")
                        img.logo-icon(src="../assets/logo.png") 
                        span.logo-word BITRADEX
                    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        .connect-status 
                            img(src="../assets/icon-socket-status-disconnected.svg")
                            small Socket status = Disconnected
                            //- img(src="../assets/icon-socket-status-connected.svg")
                            //- small Socket status = Connected
                        ul.navbar-nav.ml-auto
                            li.nav-item.active
                                a.nav-link(href="./index.html") Markets
                                    span.sr-only (current)
                            li.nav-item
                                a.nav-link(href="./order.html") Orders
                            li.nav-item
                                a.nav-link(href="./balance.html") Wallets
                            li.nav-item.dropdown
                                a.nav-link.dropdown-toggle#navbarDropdownSetting(href="./view/setting_activity" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Settings
                                .dropdown-menu(aria-labelledby="navbarDropdownSetting")
                                    a.dropdown-item(href="./setting_activity.html") Action 
                                    a.dropdown-item(href="./setting_profile.html") My Profile 
                                    a.dropdown-item(href="./setting_verification.html") Identity Verification 
                                    a.dropdown-item(href="./setting_enable.html") Enable Account 
                                    a.dropdown-item(href="./setting_password.html") Password 
                                    a.dropdown-item(href="./setting_authentication.html") Two-Factor Authentication 
                                    a.dropdown-item(href="./setting_api_key.html") API Keys 
                                    a.dropdown-item(href="./setting_auto_sell.html") Auto-Sell 
                                    a.dropdown-item(href="./setting_whitelist.html") IP Whitelist
                                    a.dropdown-item(href="./setting_withdrawal_whitelist.html") Withdrawal Whitelist 
                                    a.dropdown-item(href="./setting_ui.html") UI Settings 
                                    a.dropdown-item(href="./setting_notifications.html") Notifications 
                            li.nav-item
                                a.nav-link(href="./login.html") Login
                //- end navigation bar

                .main-container.flex-full-height.setting
                    .nav-setting.py-4.hidden-xs.hidden-sm
                        h5.heading-lv5.text-uppercase.pt-4.pl-4 
                            i.fas.fa-cog.fa-1x.pr-3
                            |Setting
                            .nav-items
                                ul.heading-lv6.nav-item.text-uppercase Summary
                                    li.heading-lv6.nav-subitem.current.active 
                                        a(href="./setting_activity.html") My Activity
                                ul.heading-lv6.nav-item.text-uppercase Account
                                    li.heading-lv6.nav-subitem 
                                        a(href="./setting_profile.html") My Profile
                                    li.heading-lv6.nav-subitem 
                                        a(href="./setting_verification.html") Identity Verification
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_enable.html") Enable Account
                                ul.heading-lv6.nav-item.text-uppercase Site Settings
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_password.html") Password
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_authentication.html") Two-Factor Authentication
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_api_key.html") API Keys
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_auto_sell.html") Auto-Sell
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_whitelist.html") IP Whitelist
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_withdrawal_whitelist.html") Withdrawal Whitelist
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_ui.html") UI Settings
                                    li.heading-lv6.nav-subitem
                                        a(href="./setting_notifications.html") Notifications
                    .main-content.p-4
                        block content
                .container-fluid.footer.market-info-footer
                    .container
                        .row.text-center
                            .col-lg-2.col-sm-4 
                                a.d-block(href="./about.html") About
                            .col-lg-2.col-sm-4 
                                a.d-block(href="./privacy.html") Privacy
                                a.d-block(href="./terms.html") Terms
                            .col-lg-2.col-sm-4 
                                a.d-block(href="./faq.html") FAQs
