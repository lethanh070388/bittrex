doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        title BITRADEX
        link(rel="stylesheet" href="../css/fontawesome-all.min.css")
        link(rel="stylesheet" href="../css/bootstrap.css")
        link(rel="stylesheet" href="../css/style.css")
    body
        .controls 
            .control-toggle
                i.fas.fa-cog.fa-1x
            .control-button-group
                button.btn-theme(data-theme="light")
                button.btn-theme(data-theme="dark")
        .wrapper.dark
            .layout
                //- navigation bar
                nav.navbar.navbar-expand-md.navbar-dark.bg-dark.scrolling-navbar.fixed-top
                    a.navbar-brand(href="./index.html")
                        img.logo-icon(src="../assets/logo.png") 
                        span.logo-word BITRADEX
                    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        .connect-status 
                            img(src="../assets/icon-socket-status-disconnected.svg")
                            small Socket status = Disconnected
                            //- img(src="../assets/icon-socket-status-connected.svg")
                            //- small Socket status = Connected
                        form.form-inline.ml-auto.pb-2.pb-sm-0
                            a#btnSubmitReq.btn.btn-outline-primary(href="./request_select.html") Submit a request
                            button.btn.btn-outline-primary.ml-3 Sign in
                //- end navigation bar
                block content
                .container-fluid.footer
                    .container
                        .row.text-center
                            .col-lg-2.col-sm-4 
                                a.d-block(href="./about.html") About
                            .col-lg-2.col-sm-4 
                                a.d-block(href="./privacy.html") Privacy
                                a.d-block(href="./terms.html") Terms
                            .col-lg-2.col-sm-4 
                                a.d-block(href="./faq.html") FAQs
                                a.d-block(href="./announcements.html") News &amp; Announcements
                            .col-lg-2.col-sm-4 
                                a.d-block(href="./fee.html") Fees
                                a.d-block(href="./referFrds.html") Refer Friends
                            .col-lg-2.col-sm-4 
                                a.d-block(href="./help_center.html") Support
                                a.d-block(href="./contact.html") Contact
                            .col-lg-2.col-sm-4 
                                a.d-block(href="#") 
                                    i.fab.fa-facebook-square.pr-1
                                    |Like Us On Facebook
                                a.d-block(href="#") 
                                    i.fab.fa-telegram-plane.pr-1
                                    |Telegram
                                
        script(src="../js/jquery.js")
        script(src="../js/popper.js")
        script(src="../js/bootstrap.js")
        script(src="../js/theme.js")
        script(src="../js/main.js")
        block script-append