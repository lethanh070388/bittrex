    body
        .controls
            button.btn-theme(data-theme="light") Light
            button.btn-theme(data-theme="dark") Dark
        .wrapper.dark
            .layout
                //- navigation bar
                nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.scrolling-navbar.fixed-top
                    a.navbar-brand(href="./index.html")
                        img.logo-icon(src="../assets/logo.svg") 
                        span.logo-word BITTREX
                    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.ml-auto
                            li.nav-item.active
                                a.nav-link(href="index.html") Markets
                                    span.sr-only (current)
                            li.nav-item
                                a.nav-link(href="#") Orders
                            li.nav-item
                                a.nav-link(href="#") Wallets
                            li.nav-item.dropdown
                                a.nav-link.dropdown-toggle#navbarDropdownSetting(href="./view/setting_activity" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Settings
                            li.nav-item
                                a.nav-link(href="#") Login
                //- end navigation bar

                .main-wapper.main-market-detail-container
                    .main_nav.visible
                        .main_nav_menu
                            .main_nav_menu_title.position-relative 
                                h1.text-uppercase Markets
                                span.toggle_icon_navbar
                                    i.fas.fa-angle-left
                            .main_nav_menu_dropdown
                                select.custom-select#MarketList
                                    option(value="1" selected) ETH Markets
                                    option(value="2") USD Markets
                                    option(value="3") BTC Markets
                                    option(value="4") USDT Markets
                            .datalist.scrollbar_custom.mCustomScrollbar
                                -for(var i=0; i<30; i++){
                                    ul.datalist_item
                                        li.datalist_item_up
                                            .market_currency ANI
                                            .market_change 
                                                span.up -3.1%
                                                img(src="../assets/arrow-up.svg", alt="")
                                        li.datalist_item_down
                                            .market_volumn 9.34
                                            .market_last 0.074890
                                -}
                    .main_content.scrollbar_custom
                        .container-fluid
                            .row
                                .col
                                    .market_info_header
                            .row
                                .col
                                    .chart_area
                        .container-fluid
